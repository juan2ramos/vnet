<script type="text/javascript">  
    
$.fn.alertbadge = function()
{
    $.getJSON("{{ path('count_mensajes') }}", function(json){
        if(json.mensajes_sin_leer != 0)
            $('.inbox-badge').html(json.mensajes_sin_leer);
        else
            $('.inbox-badge').html('');        
    });
}
    
$().alertbadge();

</script>
