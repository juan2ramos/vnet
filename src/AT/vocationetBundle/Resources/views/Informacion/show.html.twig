{% extends '::base.html.twig' %}

{% block body %}
	<div class="col-lg-9">
		<section class="panel">
			<header class="panel-heading">{% trans from "label" %}detalles.informacion{% endtrans %}</header>
			<div class="panel-body">
				<div class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}titulo{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.informacionTitulo }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}enlace{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.informacionLink }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}creacion{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.created|date('Y-m-d H:i:s') }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}estado{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">
							{% if entity.informacionEstado %}
								<span class="label label-success">{{ 'activo'|trans({}, 'label') }}</span>
							{% else %}
								<span class="label label-default">{{ 'inactivo'|trans({}, 'label') }}</span>
							{% endif %}
						</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}imagen{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.informacionImagen }}</p></div>
					</div>
					
					<div class="form-group">
						<div class="col-lg-12 text-center">
							<a class="btn btn-default" href="{{ path('admin_carreras') }}">
								{{ 'listado'|trans({}, 'label') }}</a>
							<a class="btn btn-primary" href="{{ path('admin_carreras_edit', { 'id': entity.id }) }}">
								{{ 'editar'|trans({}, 'label') }}</a>
							<div style='display:inline-block;'>
								{{ form(delete_form, {'attr':{'id':'formdeleteCarrera_'~ entity.id}}) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
	
	<div class="col-lg-3">
	
	<section class="panel">
                                  <div class="twt-feed blue-bg">
                                      <h1>Jonathan Smith</h1>
                                      <p>jsmith@flatlab.com</p>
                                      <a href="#">
                                          <img src="{{ asset('uploads/vocationet/informacion/info1.jpg') }}" alt="">
                                      </a>
                                  </div>
                                  <div class="weather-category twt-category">
                                      <ul>
                                          <li class="active">
                                              <h5>320</h5>
                                              Tweet
                                          </li>
                                          <li>
                                              <h5>1245</h5>
                                              Following
                                          </li>
                                          <li>
                                              <h5>24657</h5>
                                              Followers
                                          </li>
                                      </ul>
                                  </div>
                                  <div class="twt-write col-sm-12">
                                      <textarea class="form-control  t-text-area" rows="2" placeholder="Tweet Here"></textarea>
                                  </div>
                                  <footer class="twt-footer">
                                      <button class="btn btn-space btn-white" data-toggle="button">
                                          <i class="icon-map-marker"></i>
                                      </button>
                                      <button class="btn btn-space btn-white" data-toggle="button">
                                          <i class="icon-camera"></i>
                                      </button>
                                      <button class="btn btn-space btn-info pull-right" type="button">
                                          <i class="icon-twitter"></i>
                                          Tweet
                                      </button>
                                  </footer>
                              </section>
							  
	</div>
		
{% endblock %}