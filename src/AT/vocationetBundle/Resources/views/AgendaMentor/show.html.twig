<section class="panel">
    <div class="panel-body" style="padding-top: 0px;">
        {% if mentoria.estudianteId %}  
            <a class="task-thumb">
                <img src="{{ mentoria.usuarioImagen|default(asset(gui_default_img)) ~ '?type=large' }}" alt="">
            </a>
            <div class="task-thumb-details">
                <h1>{{ mentoria.usuarioNombre ~ ' ' ~ mentoria.usuarioApellido }}</h1>
            </div>
        {% else %}
            <h1>{% transt from "label" %}mentoria.disponible{% endtrans %}</h1>
        {% endif %}
    </div>
    <table class="table table-hover personal-task">
      <tbody>
        <tr>
            <td style="width: 40px;">
                <i class="icon-calendar"></i>
            </td>
            <td style="text-align: left;"><b>DÃ­a:</b> {{ mentoria.mentoriaInicio|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <td style="width: 40px;">
                <i class=" icon-calendar"></i>
            </td>
            <td style="text-align: left;"><b>Hora:</b> {{ mentoria.mentoriaInicio|date('H:i') }} - {{ mentoria.mentoriaFin|date('H:i') }}</td>
        </tr>
      </tbody>
    </table>
    {% if mentoria.estudianteId %}
        <div style="text-align: right;">
            {% if mentoria.mentoriaEstado == 0 %}
                <a href="{{ path('finalizar_mentoria_mentor', {'id': mentoria.id }) }}" class="btn btn-info">{% trans from "label" %}marcar.mentoria.finalizada{% endtrans %}</a>
            {% else %}
                <span class="label label-success">{% trans from "label" %}mentoria.finalizada{% endtrans %}</span>
            {% endif %}
        </div>
    {% else %}
        <div style="text-align: right;">
            <a href="{{ path('delete_mentoria_mentor', {'id': mentoria.id }) }}" class="btn btn-danger btn-delete-mentoria">{% trans from "label" %}eliminar{% endtrans %}</a>
        </div>
    {% endif %}
</section>
