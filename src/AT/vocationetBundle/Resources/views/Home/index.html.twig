	<script type="text/javascript">
		$(document).ready(function()
		{
			$('#container_map').zoom({
				magnify :'1',
				on:'click',
				onZoomIn: function(){
					<!-- Zoom activado -->
					$('.zoomImg').removeClass('cls-hidden');
				},
				onZoomOut: function(){
					<!-- Zoom desactivado -->
					$('.zoomImg').addClass('cls-hidden');
				},
				callback:  function(){
					<!-- Zoom iniciado -->
					$('.zoomImg').addClass('cls-hidden');
