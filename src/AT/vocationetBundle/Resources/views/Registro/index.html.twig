<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Altactic">
    <meta name="keyword" content="">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <title>{% block title %}Vocacionet{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap-reset.css') }}" rel="stylesheet">
    <!--external css-->
    <link href="{{ asset('assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style-responsive.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/gritter/css/jquery.gritter.css') }}" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="{{ asset('js/html5shiv.js') }}"></script>
      <script src="{{ asset('js/respond.min.js') }}"></script>
    <![endif]-->
  </head>

  <body>

  <section id="container" class="">
      <!--header start-->
      <header class="header white-bg">
          <a href="#" class="logo" >Vocatio<span>net</span></a>          
      </header>
      
      <!--sidebar end-->
      <!--main content start-->
      <section id="content">
          <section class="wrapper">
              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              <h4>{% trans from "label" %}registro.para.estudiantes{% endtrans %}</h4>
                          </header>
                          <div class="panel-body">
                              <div class=" form">
                                  <form class="cmxform form-horizontal tasi-form" id="signupForm" method="POST" action="{{ path('registro') }}">
                                      <div class="form-group ">
                                          <div class="col-lg-6">
                                              <p style="font-size: 14px;">
                                                  {% trans from "label" %}sugerencia.registro.estudiante{% endtrans %}
                                                  <a href="{{ login_facebook_url }}" class="btn btn-shadow  btn-facebook">
                                                      <i class="icon-facebook"></i>
                                                      {% trans from "label" %}facebook{% endtrans %}
                                                  </a>
                                              </p>
                                          </div>
                                          <div class="col-lg-6">
                                              <p style="font-size: 14px;">
                                                  {% trans from "label" %}sugerencia.registro.mentor{% endtrans %}
                                                  <a href="{{ login_linkedin_url }}" class="btn btn-shadow  btn-linkedin">
                                                      <i class="icon-linkedin"></i>
                                                      {% trans from "label" %}linkedin{% endtrans %}
                                                  </a>
                                              </p>
                                          </div>
                                      </div>
                                      <div class="form-group ">
                                          <label for="cname" class="control-label col-lg-2">{% trans from "label" %}perfil.nombre{% endtrans %}</label>
                                          <div class="col-lg-10">
                                              {{ form_widget(form.first_name, {'attr':{'class':'form-control', 'autofocus':''} }) }}
                                          </div>
                                      </div>
                                      <div class="form-group ">
                                          <label for="cemail" class="control-label col-lg-2">{% trans from "label" %}perfil.apellido{% endtrans %}</label>
                                          <div class="col-lg-10">
                                              {{ form_widget(form.last_name, {'attr':{'class':'form-control'} }) }}
                                          </div>
                                      </div>
                                      <div class="form-group ">
                                          <label for="cemail" class="control-label col-lg-2">{% trans from "label" %}email{% endtrans %}</label>
                                          <div class="col-lg-10">
                                              {{ form_widget(form.email, {'attr':{'class':'form-control'} }) }}
                                          </div>
                                      </div>
                                      <div class="form-group ">
                                          <label for="curl" class="control-label col-lg-2">{% trans from "label" %}contrasena{% endtrans %}</label>
                                          <div class="col-lg-10">
                                              {{ form_widget(form.pass, {'attr':{'class':'form-control password1'} }) }}
                                              <div class="progress progress-sm" style="height: 5px;">
                                                  <div id="progress-bar-pass" class="progress-bar progress-bar-danger" style="width: 0.8%"></div>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="form-group ">
                                          <label for="ccomment" class="control-label col-lg-2">{% trans from "label" %}confirmar.contrasena{% endtrans %}</label>
                                          <div class="col-lg-10">
                                              {{ form_widget(form.conf_pass, {'attr':{'class':'form-control password2'} }) }}
                                              <div class="progress progress-sm" style="height: 5px;">
                                                  <div id="span_conf" class="progress-bar progress-bar-danger" style="width: 100%"></div>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <div class="col-lg-offset-2 col-lg-10">
                                              {{ form_widget(form._token) }}
                                              {{ form_errors(form) }}
                                              <button class="btn btn-primary btn-lg" type="submit">{% trans from "label" %}registrarse{% endtrans %}</button>
                                          </div>
                                      </div>
                                  </form>
                              </div>

                          </div>
                      </section>
                  </div>
              </div>
              
          </section>
      </section>
      <!--main content end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.scrollTo.min.js') }}"></script>
    <script src="{{ asset('js/jquery.nicescroll.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('js/jquery.validate.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/password.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/gritter/js/jquery.gritter.js') }}"></script>
    {% include '::alerts.html.twig' %}

    <!--common script for all pages-->
    <script src="{{ asset('js/common-scripts.js') }}"></script>

    <script>
        $("#signupForm").on('submit', function(){
            if(nivelPass >= 4)
            {
               if($('.password1').val() == $('.password2').val())
               {
                   return true;
               }
               else
               {
                   $.gritter.add({
                        title: '{% trans from "label" %}pass.invalido{% endtrans %}',
                        text: '{% trans from "label" %}pass.no.coincide{% endtrans %}',
                        class_name: 'gritter-light',
                        time: 5000,
                        image: '{{ asset('img/delete.png') }}',                        
                    });
                   return false;
               }
            }
            else
            {
                $.gritter.add({
                    title: '{% trans from "label" %}pass.invalido{% endtrans %}',
                    text: '{% trans from "label" %}pass.inseguro{% endtrans %}',
                    class_name: 'gritter-light',
                    time: 5000,
                    image: '{{ asset('img/delete.png') }}',                        
                });
                return false;
            }
       });
    </script>
  </body>
</html>
