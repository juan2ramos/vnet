{% extends '::base.html.twig' %}

{% block menu %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <section>
              <div class="panel panel-primary">
                  <div class="panel-heading" style="font-size: 21px">{{ title }}</div>
                  <div class="panel-body">
                      <div class="row">
                        <div class="col-lg-1">
                            <img src="  
                            {% if type == 'success' %}
                                {{ asset('img/success.png') }}
                            {% elseif type == 'info' %}
                                {{ asset('img/info.png') }}
                            {% elseif type == 'warning' %}
                                {{ asset('img/warning.png') }}
                            {% elseif type == 'error' %}
                                {{ asset('img/delete.png') }}
                            {% endif %}
                             " />   
                          </div>
                          <div class="col-lg-11">
                              {{ message|raw }}.
                          </div>
                          
                      </div>
                      <hr>
                      {% if file %}
						  {% if path %}
							<div id='contentIframe' STYLE='text-align:center;'>
								<iframe id="fraDisabled" src="{{ asset(getParameter('path_reportes') ~ path) ~ '?f='~'now'|date('U') }}" width="800px" height="300px" /*seamless*/>
								</iframe>
							</div>
						{% else %}
							<div class="alert alert-warning fade in">
							  <button data-dismiss="alert" class="close close-sm" type="button">
								  <i class="icon-remove"></i>
							  </button>
							  <strong></strong> {% trans from "label" %}mentor.no.ha.subido.archivo.espere.porfavor{% endtrans %}
						  </div>
						  {% endif %}
                      {% endif %}
                      <div style="text-align: center; margin-top:20px;">
                          <a href="{{ path('homepage' ) }}" class="btn btn-shadow btn-primary">{% trans from "label" %}ir.al.home{% endtrans %}</a>
                          <a href="{{ path('perfil', { 'perfilId': sess_user.id } ) }}" class="btn btn-shadow btn-primary">{% trans from "label" %}ver.perfil{% endtrans %}</a>
                      </div>
                  </div>
              </div>
          </section>
    </div>
</div>
{% endblock body %}

{% block script %}
	<script>
		//Desactivar click derecho de ifram de PDF
		$('#fraDisabled').ready(function() {
			window.frames["fraDisabled"].document.oncontextmenu = function(){return false;};
		});
	</script>
{% endblock script %}
