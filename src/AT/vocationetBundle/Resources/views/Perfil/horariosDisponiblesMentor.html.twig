{% extends "::base.html.twig" %}

{% block style %}
	<style>
		.paddBtn{
			padding-bottom: 10px;
		}
		.paddBtnEstTrb{
			padding-bottom: 30px;
		}
	</style>
	<link href="{{ asset('assets/fullcalendar/fullcalendar/bootstrap-fullcalendar.css') }}" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/bootstrap-datepicker/css/datepicker.css') }}" />
{% endblock style %}

{% block menu %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}

	<div class='col-lg-12'>
		<div class="row">
			<aside class="profile-nav col-lg-4">

				{# IMAGEN DE PERFIL Y NOMBRE #}
				<section class="panel">
					<div class="user-heading round">
						{% set imagen = (perfil.usuarioImagen) ? perfil.usuarioImagen : gui_default_img %}
						<a href="#"><img src="{{ asset(imagen ~ '?type=large') }}" alt=""></a>
						<h1>{{ perfil.usuarioApellido }}&nbsp;{{ perfil.usuarioNombre }}</h1>
						<p>{{ perfil.usuarioEmail }}</p>
						<p>{{ perfil.nombreRol|trans({}, "db") }}</p>
					</div>
					
					<ul class="nav nav-pills nav-stacked">
						<li> <a href="{{ path('perfil', {'perfilId' : perfil.usuarioId }) }}"> <i class="icon-user"></i> {% trans from "label" %}perfil{% endtrans %}</a></li>
						{% if sess_user.id == perfil.usuarioId %}
							<li> <a href="{{ path('perfil_edit') }}"> <i class="icon-edit"></i> {% trans from "label" %}editar.perfil{% endtrans %}</a></li>
							<li> <a href="{{ path('perfil_sincronizar')}}"> <i class="icon-linkedin"></i> {% trans from "label" %}sincronizar.perfil{% endtrans %}</a></li>
						{% else %}
							<li class="active"> <a href="{{ path('horarios_disponibles_mentor', {'perfilId' : perfil.usuarioId })}}"> <i class="icon-calendar"></i> {% trans from "label" %}disponibilidad{% endtrans %}</a></li>
						{% endif %}
						<li> <a href="{{ path('mentor_resenas', {'perfilId' : perfil.usuarioId })}}"> <i class="icon-file-text-alt"></i> {% trans from "label" %}resenas{% endtrans %}</a></li>
					</ul>
				</section>
			</aside>

			<aside class="profile-info col-lg-8">

				{% if tipoIngreso == false %}
					<div class="alert alert-success fade in">
						<button data-dismiss="alert" class="close close-sm" type="button">
							<i class="icon-remove"></i>
						</button>
						{% trans from "label" %}aclaracion.separacion.de.mentorias.primero.seleccionar.mentor{% endtrans %}
					</div>
				{% endif %}
				
				<div class="row">
					<aside class="col-lg-12">
						<section class="panel">

							<div class="panel-body">
								<ul class="summary-list">
									<li style='width:99%'>
										<i class="icon-calendar" style='color:#8695A6'></i> {% trans from "label" %}mentoria.disponible{% endtrans %}
									</li>
								</ul>
							</div>

							<div class="panel-body">
								<div id="calendar" class="has-toolbar"></div>
							</div>

						</section>
					</aside>
				</div>

				<aside class="col-lg-12">
					<section class="panel pull-right">
						<button type="button" class="btn btn-success btn-sm" onClick='history.back();'><i class='icon-rotate-left'></i> {% trans from "label" %}volver{% endtrans %}</button>
					</section>
				</aside>
					
				<div id="modal-mentoria" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
					  <div class="modal-content">
						  <div class="modal-header">
							  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							  <h4 class="modal-title">{% trans from "label" %}mentoria{% endtrans %}</h4>
						  </div>
						  <div class="modal-body">
							  <div style="text-align: center"><img src="{{ asset('img/ajax-loader.gif') }}" /></div>
						  </div>    
					  </div>
					</div>
				</div>
			</aside>
		</div>
	</div>
{% endblock body %}

{% block script %}
<script type="text/javascript" src="{{ asset('js/jquery-ui-1.9.2.custom.min.js') }}"></script>
<script src="{{ asset('assets/fullcalendar/fullcalendar/fullcalendar.min.js') }}"></script>
<script type="text/javascript">
    var date = new Date();
    var d = date.getDate();
    var m = date.getMonth();
    var y = date.getFullYear();

    $('#calendar').fullCalendar({
        header: {
            left: 'prev,next today',
            center: 'title',
            right: 'month,basicWeek,basicDay'
        },
        editable: false,
        droppable: false,
        events: [
        {% for mentoria in mentorias %}
            {
                title: '{{ mentoria.usuarioNombre ~ ' ' ~ mentoria.usuarioApellido }}{% if not mentoria.estudianteId %} ({% trans from "label" %}mentoria.disponible{% endtrans %}){% endif %}',
                start: new Date({{ mentoria.mentoriaInicio|date('Y') }}, {{ mentoria.mentoriaInicio|date('m') }}-1, {{ mentoria.mentoriaInicio|date('d') }}, {{ mentoria.mentoriaInicio|date('H') }}, {{ mentoria.mentoriaInicio|date('i') }}),
                end: new Date({{ mentoria.mentoriaFin|date('Y') }}, {{ mentoria.mentoriaFin|date('m') }}-1, {{ mentoria.mentoriaFin|date('d') }}, {{ mentoria.mentoriaFin|date('H') }}, {{ mentoria.mentoriaFin|date('i') }}),
                allDay: false,
                {% set color = (mentoria.estudianteId) ? ((mentoria.mentoriaEstado == 0) ? '#EB9823' : '#72B572') : '#8695A6' %}
				color: '{{ color }}',
                {% if tipoIngreso %}
					url: "{{ path('show_mentoria_estudiante', {'id':mentoria.id}) }}"
                {% endif %}
            },
        {% endfor %}
        ]
    });

    {% if tipoIngreso %}
    $("#calendar").on('click', '.fc-event', function(e){
        e.preventDefault();
        
        $(".modal-body").html('<div style="text-align: center"><img src="{{ asset('img/ajax-loader.gif') }}" /></div>');
        
        var url = $(this).attr('href');        
        $("#modal-mentoria").modal('show');
        
        $.get(url, function(response){
            $(".modal-body").html(response);
        });
    });
    {% endif %}
    
    
    $(".modal-body").on("click", ".btn-participar-mentoria", function(e){
        e.preventDefault();
        
        var btn = $(this);
        
        if(confirm("{% trans from "label" %}desea.separar.mentoria{% endtrans %}"))
        {
            var href = $(this).attr('href');            
            var btnText = btn.html();

            btn.attr('disabled', true);
            btn.html(submit_text);
            
            $.ajax({
                type: "POST",
                url: href,
                dataType: "json",
                success: function (response){   
                    if(response.status === "success"){
                        $.gritter.add({
                            title: response.message,
                            text: response.detail,
                            time: 5000,
                            image: asset_path + 'img/success.png',
                        });
                    }
                    else if(response.status === "error"){
                        $.gritter.add({
                            title: response.message,
                            text: response.detail,
                            time: 5000,
                            image: asset_path + 'img/delete.png',
                        });
                        btn.attr('disabled', false);
                        btn.html(btnText);
                    }

                    if(typeof(response.redirect) != "undefined"){
                        location.href = response.redirect;
                    }
                },
                error: function() {
                    console.error('AJAX Error');                    
                }
            });
        }        
    });
    
</script>
{% endblock script %}
