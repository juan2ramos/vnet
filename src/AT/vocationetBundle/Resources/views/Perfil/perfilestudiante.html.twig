{% extends "::base.html.twig" %}

{% block style %}
<style>
	.paddBtn{
		padding-bottom: 10px;
	}
</style>
{% endblock style %}

{% block menu %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
	{% set span = (publicidad) ? 9 : 12 %}
	<div class='col-lg-{{ span }}'>
		<div class="row">
		
			{# PERFIL ESTUDIANTE #}
			{% if perfil %}
				<aside class="profile-nav col-lg-4">

					{# IMAGEN DE PERFIL Y NOMBRE #}
					<section class="panel">
						<div class="user-heading round">
							{% set imagen = (perfil.usuarioImagen) ? perfil.usuarioImagen : gui_default_img %}
							<a href="#"><img src="{{ asset(imagen ~ '?type=large') }}" alt=""></a>
							<h1>{{ perfil.usuarioApellido }}&nbsp;{{ perfil.usuarioNombre }}</h1>
							<p>{{ perfil.usuarioEmail }}</p>
						</div>
						
						<ul class="nav nav-pills nav-stacked">
							<li class="active"><a href="{{ path('perfil', {'perfilId' : perfil.usuarioId }) }}"> <i class="icon-user"></i> {% trans from "label" %}perfil{% endtrans %}</a></li>
							{% if sess_user.id == perfil.usuarioId %}
								<li class=""><a href="{{ path('perfil_edit') }}"> <i class="icon-user"></i> {% trans from "label" %}editar.perfil{% endtrans %}</a></li>
							{% endif %}

							{# MODAL EN DONDE SE MUESTRA EL INFORME SUBIDO POR EL MENTOR Y VISIBLE SOLO PARA EL MENTOR #}
							{% if showInformeML %}
								<li class=""><a data-toggle="modal" href="#myModal" > <i class="icon-file-text-alt"></i> {% trans from "label" %}informe.mercado.laboral{% endtrans %}</a></li>
								<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">
									<div class="modal-dialog">
										<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
													<h4 class="modal-title">{% trans from "label" %}informe.mercado.laboral{% endtrans %}</h4>
												</div>
												<div class="modal-body" STYLE='text-align:center;'>
													<iframe id="fraDisabled" src="{{ asset(rutaInformeML) ~ '?f='~'now'|date('U') }}" width="100%" height="300px">
													</iframe>
												</div>
												<div class="modal-footer">
													<button data-dismiss="modal" class="btn btn-default" type="button">{% trans from "label" %}cerrar{% endtrans %}</button>
												</div>
											</form>
										</div>
									</div>
								</div>
							{% endif %}
						</ul>
					</section>

					{# PUNTUACIÓN DEL USUARIO #}
					{% if perfil.usuarioPuntos %}
