							<div class="col-lg-12">
								<section class="panel">
									<div class="symbol blue" style='padding:5px;width:30%'>
										{% set auxName = '' %}
										{% if perfil.usuarioPuntos > 1500 %}
											<img src="{{ asset('img/vocationet/medallas/campeon.png') }}" width='100%' style='min-width:100px;min-height:90px;max-height:100px;'>
											{% set auxName %}{% trans from "label" %}campeon{% endtrans %}{%endset %}
										{% elseif perfil.usuarioPuntos > 1000 %}
											<img src="{{ asset('img/vocationet/medallas/master.png') }}" width='100%' style='min-width:100px;min-height:90px;max-height:100px;'>
											{% set auxName %}{% trans from "label" %}master{% endtrans %}{%endset %}
										{% elseif perfil.usuarioPuntos > 600 %}
											<img src="{{ asset('img/vocationet/medallas/oro.png') }}" width='100%' style='min-width:100px;min-height:90px;max-height:100px;'>
											{% set auxName %}{% trans from "label" %}oro{% endtrans %}{%endset %}
										{% elseif perfil.usuarioPuntos > 300 %}
