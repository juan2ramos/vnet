{% extends '::base.html.twig' %}

{% block menu %}
	{% set active = 'temas' %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">{% trans from "label" %}detalles.tema{% endtrans %}</header>
			<div class="panel-body">
				<div class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}tema{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.nombre }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}carrera{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.carrera.nombre }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}temas{% endtrans %} ({% trans from "label" %}comentarios{% endtrans %})</label>
						<div class="col-lg-10">
							<p class="help-block">
								{% for f in foros %}
									- {{ f.foroTitulo }} ({{ f.countComent }})<br>
								{% else %}
									{% trans from "label" %}el.tema.no.tiene.foros{% endtrans %}
								{% endfor %}
							</p>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-12 text-center">
							<a class="btn btn-default" href="{{ path('admin_temas') }}">
								{{ 'listado'|trans({}, 'label') }}</a>
							<a class="btn btn-primary" href="{{ path('admin_temas_edit', { 'id': entity.id }) }}">
								{{ 'editar'|trans({}, 'label') }}</a>
							<div style='display:inline-block;'>
								{{ form(delete_form, {'attr':{'id':'formdeleteTema_'~ entity.id}}) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}