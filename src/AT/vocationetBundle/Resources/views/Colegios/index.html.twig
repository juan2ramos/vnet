{% extends '::base.html.twig' %}

{% block menu %}
	{% set active = 'colegios' %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
                    <div STYLE='text-align:right;'>
                        <a type="button" class="btn btn-primary btn-xs" href='{{ path('admin_colegios_new') }}'>
                            <i class='icon-plus'></i>&nbsp;{% trans from "label" %}nuevo.colegio{% endtrans %}
                        </a>
                    </div>
                    {% trans from "label" %}colegios{% endtrans %}
                </header>
				
				{% if entities %}
					<table class="table table-striped border-top datatable">
						<thead>
							<tr>
								<th></th>
								<th>{% trans from "label" %}colegio{% endtrans %}</th>
								<th class='text-center'>{% trans from "label" %}opciones{% endtrans %}</th>
							</tr>
						</thead>
						<tbody>
							{% for entity in entities %}
								<tr>
									<td></td>
									<td STYLE='padding:6px;'>{{ entity.nombre }}</td>
									<td STYLE='padding:6px;' class='text-center'>
										<a class="btn btn-success btn-xs" href="{{ path('admin_colegios_show', { 'id': entity.id }) }}">
											<i class="icon-ok"></i> {{ 'ver'|trans({}, 'label') }}</a>
										<a class="btn btn-primary btn-xs" href="{{ path('admin_colegios_edit', { 'id': entity.id }) }}">
											<i class="icon-pencil"></i> {{ 'editar'|trans({}, 'label') }}</a>
											
										<form id="formdeleteColegio_{{ entity.id }}" action="{{ path('admin_colegios_delete', { 'id': entity.id }) }}" method="post" style="display:inline">
											<button type='button' class="btn btn-danger btn-xs confirmdelete" data-id='{{ entity.id }}' data-ent='Colegio'>
												<input type="hidden" name="_method" value="DELETE">
												<i class="icon-trash"></i> {{ 'eliminar'|trans({}, 'label') }}</a>
											</button>
										</form>

									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				{% else %}
					<div class="panel-body" STYLE='text-align:center;'>
						{% trans from "label" %}no.se.encuentra.registrados.colegios{% endtrans %}
					</div>
				{% endif %}
			</section>
		</div>
	</div>
{% endblock body %}

{% block script %}
    <script type="text/javascript" src="{{ asset('assets/data-tables/jquery.dataTables.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/data-tables/DT_bootstrap.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/vocationet/datatables.js') }}"></script>
{% endblock script%}