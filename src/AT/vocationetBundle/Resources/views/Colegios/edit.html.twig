{% extends '::base.html.twig' %}

{% block menu %}
	{% set active = 'colegios' %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">{% trans from "label" %}editar.colegio{% endtrans %}</header>
			<div class="panel-body">
				<form class="form-horizontal" action="{{ path('admin_colegios_edit', {'id':entity.id}) }}" method="POST" {{ form_enctype(form) }}>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}colegio{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ form_widget(form.nombre, {'attr': {'class':'form-control', 'style':'width:80%;'}} ) }}</p></div>
					</div>
					{{ form_errors(form) }}
                    {{ form_widget(form._token) }}
					<div class="form-group">
						<div class="col-lg-12 text-center">
							<a class="btn btn-default" href="{{ path('admin_colegios') }}">
								{{ 'listado'|trans({}, 'label') }}</a>
							<button type="submit" class="btn btn-success">{{ 'guardar.cambios'|trans({}, 'label') }}</button>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
{% endblock body %}