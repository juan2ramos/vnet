{% extends '::base.html.twig' %}

{% block menu %}
	{% set active = 'colegios' %}
	{% include '::menu.html.twig' %}
{% endblock menu %}

{% block body %}
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">{% trans from "label" %}detalles.colegio{% endtrans %}</header>
			<div class="panel-body">
				<div class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}colegio{% endtrans %}</label>
						<div class="col-lg-10"><p class="help-block">{{ entity.nombre }}</p></div>
					</div>
					<div class="form-group">
						<label class="col-lg-2 control-label">{% trans from "label" %}estudiantes{% endtrans %}</label>
						<div class="col-lg-10">
							<p class="help-block">
								{% for u in usuarios %}
									- {{ u.usuarioNombre ~ u.usuarioApellido }}<br>
								{% else %}
									{% trans from "label" %}ningun.estudiante.ha.indicado.pertenecer.a.este.colegio{% endtrans %}
								{% endfor %}
							</p>
						</div>
					</div>
					<div class="form-group">
						<div class="col-lg-12 text-center">
							<a class="btn btn-default" href="{{ path('admin_colegios') }}">
								{{ 'listado'|trans({}, 'label') }}</a>
							<a class="btn btn-primary" href="{{ path('admin_colegios_edit', { 'id': entity.id }) }}">
								{{ 'editar'|trans({}, 'label') }}</a>
							<div style='display:inline-block;'>
								{{ form(delete_form, {'attr':{'id':'formdeleteColegio_'~ entity.id}}) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}