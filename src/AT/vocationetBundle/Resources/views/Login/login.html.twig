<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Altactic">
    <meta name="keyword" content="">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <title>{% block title %}Vocacionet{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap-reset.css') }}" rel="stylesheet">
    <!--external css-->
    <link href="{{ asset('assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/style-responsive.css') }}" rel="stylesheet" />
    
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/gritter/css/jquery.gritter.css') }}" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
        <script src="{{ asset('js/html5shiv.js') }}"></script>
		<script src="{{ asset('js/respond.min.js') }}"></script>
    <![endif]-->
</head>
	<body class="login-body">
		<div class="container">
			<form class="form-signin" action="{{ path('login') }}" method="POST">
				<h2 class="form-signin-heading">{% trans from "label" %}iniciar.sesion{% endtrans %}</h2>
				<div class="login-wrap">
					<div class="row">
						<div class="col-lg-6 border-right"> 
							<p class="title-ini-ses"> {% trans from "label" %}para.estudiantes{% endtrans %} </p>
							<div class="login-social-link">
								<a href="{{ login_facebook_url }}" >{# class="facebook" #}
									{#<i class="icon-facebook"></i> {% trans from "label" %}facebook{% endtrans %}#}
									<img src="{{ asset('img/vocationet/logo-facebook.png') }}" width="130" height="40" />
								</a>
							</div>
							<p> {% trans from "label" %}si.no.tiene.cuenta.de.facebook{% endtrans %} </p>
							{{ form_widget(form.username, {'attr':{'class':'form-control', 'placeholder': 'email'|trans({}, 'label'), 'autofocus':''} }) }}
							{{ form_widget(form.password, {'attr':{'class':'form-control', 'placeholder': 'contrasena'|trans({}, 'label')} }) }}
							{{ form_widget(form._token) }}
							{{ form_errors(form) }}
							
							<label class="checkbox">
								<span class="pull-right"> 
									<a href="{{ path('registro') }}">{% trans from "label" %}registrarse{% endtrans %}</a>
								</span> 
							</label>
							<label class="pull-right">
								<a href="{{ path('forget_pass') }}" style="color:#41cac0">{% trans from "label" %}olvide.mi.contrasena{% endtrans %}</a>
							</label>
							<button class="btn btn-lg btn-login btn-block" type="submit">{% trans from "label" %}ingresar{% endtrans %}</button>
						</div>
					
						
						<div class="col-lg-6"> 
							<p class="title-ini-ses"> {% trans from "label" %}para.mentores{% endtrans %} </p>
							<div class="login-social-link">
								<a href="{{ login_linkedin_url }}"> {# class="linkedin" #}
									{#<i class="icon-linkedin"></i> {% trans from "label" %}linkedin{% endtrans %}#}
									<img src="{{ asset('img/vocationet/logo-linkedin.png') }}" width="130" height="auto" />
								</a>
							</div>
							<p> {% trans from "label" %}aclaracion.cuenta.linkedin{% endtrans %} 
								<a href="https://co.linkedin.com/" style='color:#41cac0'> {% trans from "label" %}aqui{% endtrans %}</a>
							</p>
						</div>
					</div> 

					<div class="row">
						<div class="col-lg-12"> 
							<label class="text-justify">
								<hr class="line-diviser">
								<div class="col-xs-2"> <i class="icon-exclamation-sign icon-big" style="color:#E76600;"></i> </div>
								<div class="col-xs-10"> {% trans from "label" %}aclaracion.login.usuarios.facebook.linkedin{% endtrans %} </div>
							</label> 
						</div>
					</div>
				</div>
			</form>
		</div>
		
		<!-- js placed at the end of the document so the pages load faster -->
		<script src="{{ asset('js/jquery.js') }}"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"></script>
		<script src="{{ asset('js/jquery.scrollTo.min.js') }}"></script>
		<script src="{{ asset('js/jquery.nicescroll.js') }}" type="text/javascript"></script>
		<script type="text/javascript" src="{{ asset('assets/gritter/js/jquery.gritter.js') }}"></script>

		<!--common script for all pages-->
		<script src="{{ asset('js/common-scripts.js') }}"></script>

		{% include '::alerts.html.twig' %}
	
	</body>
</html>
